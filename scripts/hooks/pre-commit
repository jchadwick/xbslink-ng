#!/bin/bash
# Pre-commit hook: Run linters before committing

set -e

echo "Running pre-commit checks..."

# Check if go is installed
if ! command -v go &> /dev/null; then
    echo "Error: go is not installed"
    exit 1
fi

# Get list of staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [ -z "$STAGED_GO_FILES" ]; then
    echo "No Go files staged, skipping checks"
    exit 0
fi

echo "Checking Go files..."

# Run gofmt check
echo "Running gofmt..."
UNFORMATTED=$(gofmt -l $STAGED_GO_FILES)
if [ -n "$UNFORMATTED" ]; then
    echo "Error: The following files are not formatted with gofmt:"
    echo "$UNFORMATTED"
    echo ""
    echo "Run: gofmt -w $UNFORMATTED"
    exit 1
fi

# Run go vet
echo "Running go vet..."
if ! go vet ./...; then
    echo "Error: go vet found issues"
    exit 1
fi

# Run staticcheck if available (optional)
if command -v staticcheck &> /dev/null; then
    echo "Running staticcheck..."
    if ! staticcheck ./...; then
        echo "Error: staticcheck found issues"
        exit 1
    fi
fi

echo "âœ“ Pre-commit checks passed"
exit 0
